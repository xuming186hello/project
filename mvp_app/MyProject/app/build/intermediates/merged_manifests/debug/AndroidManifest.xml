<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tosmart.xiexuming.myapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="32" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <queries>
        <provider
            android:name="com.android.car.ui.plugin.PluginNameProvider"
            android:authorities="com.android.car.ui.plugin" />
    </queries>

    <application
        android:name="com.tosmart.xiexuming.myapplication.MyApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.MyApplication" >
        <activity
            android:name="com.tosmart.xiexuming.myapplication.search.SearchActivity"
            android:exported="false" />
        <activity
            android:name="com.tosmart.xiexuming.myapplication.favorite.FavoriteActivity"
            android:exported="false" />
        <activity
            android:name="com.tosmart.xiexuming.myapplication.MainMenuActivity"
            android:exported="false" />
        <activity
            android:name="com.tosmart.xiexuming.myapplication.start.StartActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.android.car.ui.core.CarUiInstaller"
            android:authorities="com.tosmart.xiexuming.myapplication.CarUiInstaller"
            android:directBootAware="true"
            android:exported="false"
            android:process="@string/car_ui_installer_process_name" />
        <provider
            android:name="com.android.car.ui.core.SearchResultsProvider"
            android:authorities="com.tosmart.xiexuming.myapplication.SearchResultsProvider"
            android:exported="true"
            android:process="@string/car_ui_installer_process_name"
            android:readPermission="com.android.car.ui.READ_SEARCH_RESULTS" />
    </application>

</manifest>