<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:background="@color/title_background">

    <TextView
        android:id="@+id/textview_top_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/text_while"
        android:textSize="@dimen/text_size_huge" />

    <ImageView
        android:id="@+id/image_top_bar_back"
        android:layout_width="@dimen/top_bar_image_back_width"
        android:layout_height="@dimen/top_bar_image_back_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/top_bar_image_back_margin_Left"
        android:background="@mipmap/ic_back" />

</RelativeLayout>