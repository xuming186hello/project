<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="186dp"
        android:layout_height="119dp">

        <ProgressBar
            android:id="@+id/progress_bar_wait"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17px"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@anim/anim_progressbar"
            android:indeterminateOnly="true"

            />

        <TextView
            style="?android:attr/progressBarStyle"
            android:layout_width="81dp"
            android:layout_height="32dp"
            android:layout_below="@+id/progress_bar_wait"
            android:layout_alignLeft="@+id/progress_bar_wait"
            android:layout_marginTop="16dp"
            android:text="@string/start_wait"
            android:textColor="@color/text_while"
            android:textSize="13dp" />
    </RelativeLayout>
</RelativeLayout>